{
  "switches": {
    "sw1": {
      "class": "evanblasy.router.PWOSPFRouter",
      "prog": "evanblasy/switch.p4",
      "enable_ctrl": true,
      "ctrl_args": {
        "start_wait": 0.5,
        "router_id": "10.0.0.0",
        "area_id": "192.168.0.0",
        "mac": "10:00:00:00:00:00"
      }
    }
  },
  "hosts": {
    "h1": { "ip": "10.0.0.1", "defaultRoute": "dev eth0 via 10.0.0.1" },
    "h2": { "ip": "10.0.0.2", "defaultRoute": "dev eth0 via 10.0.0.2" },
    "h3": { "ip": "10.0.0.3", "defaultRoute": "dev eth0 via 10.0.0.3" }
  },
  "links": [
    [ "h1", "sw1", {"port2": 2}],
    [ "h2", "sw1", {"port2": 3}],
    [ "h3", "sw1", {"port2": 4}]
  ]
}