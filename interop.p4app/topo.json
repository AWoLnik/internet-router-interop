{
  "switches": {
    "sw1": {
      "class": "evanblasy.router.PWOSPFRouter",
      "prog": "evanblasy/switch.p4",
      "enable_ctrl": true,
      "ctrl_args": {
        "start_wait": 0.5,
        "router_id": "10.0.0.0",
        "area_id": "192.168.0.0",
        "mac": "10:00:00:00:00:00"
      }
    },
    "sw2": {
      "class": "evanblasy.router.PWOSPFRouter",
      "prog": "evanblasy/switch.p4",
      "enable_ctrl": true,
      "ctrl_args": {
        "start_wait": 0.5,
        "router_id": "10.0.1.0",
        "area_id": "192.168.0.0",
        "mac": "20:00:00:00:00:00"
      }
    },
    "adam-switch": {
      "class": "adamwolnikowski.controller.RouterController",
      "prog": "adamwolnikowski/router.p4",
      "enable_ctrl": true,
      "pcap_dump": "/tmp/p4app-logs",
      "ctrl_args": {
        "2": {
          "routerID": "10.0.0.1",
          "MAC": "00:00:00:00:00:01",
          "areaID": 1
        }
      }
    },
    "sw4": {
      "class": "willsussman.maclearning.MacLearningSwitch",
      "prog": "willsussman/l2switch.p4",
      "enable_ctrl": false,
      // "ctrl_args": {
      //   "start_wait": 0.5,
      //   "router_id": "10.0.0.0",
      //   "area_id": "192.168.0.0",
      //   "mac": "10:00:00:00:00:00"
      // }
    }
  },
  "hosts": {
    "h1": { "ip": "10.0.0.1", "defaultRoute": "dev eth0 via 10.0.0.1" },
    "h2": { "ip": "10.0.0.2", "defaultRoute": "dev eth0 via 10.0.0.2" },
    "h3": { "ip": "10.0.0.3", "defaultRoute": "dev eth0 via 10.0.0.3" },
    "h4": { "ip": "10.0.1.4", "defaultRoute": "dev eth0 via 10.0.1.4" },
    "h5": { "ip": "10.0.1.5", "defaultRoute": "dev eth0 via 10.0.1.5" },
    "h6": { "ip": "10.0.1.6", "defaultRoute": "dev eth0 via 10.0.1.6" }
  },
  "links": [
    [ "h1", "sw1"],
    [ "h2", "sw1"],
    [ "h3", "sw1"],
    [ "h4", "sw2"],
    [ "h5", "sw2"],
    [ "h6", "sw2"],
    [ "sw1", "sw2"]
  ]
}